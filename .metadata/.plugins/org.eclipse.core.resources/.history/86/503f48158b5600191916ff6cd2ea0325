package kr.or.ddit.basic;
import java.util.ArrayList;


public class T02_ArrayListTest {

	public static void main(String[] args) {
		// ArrayList�뒗 湲곕낯�쟻�씤 �궗�슜踰뺤씠 Vector�� 媛숇떎.
		// DEFAULT_CAPACITY = 10;
		ArrayList list1 = new ArrayList();
		
		// add()硫붿꽌�뱶瑜� �궗�슜�빐�꽌 �뜲�씠�꽣瑜� 異붽��븳�떎.
		list1.add("aaa");
		list1.add("bbb");
		list1.add(111);
		list1.add('k');
		list1.add(true);
		list1.add(12.34);
		
		// size() ==> �뜲�씠�꽣 媛쒖닔
		System.out.println("size => " + list1.size());
		System.out.println("list1 => " + list1);
		
		// get�쑝濡� �뜲�씠�꽣 爰쇰궡�삤湲�
		System.out.println("1踰덉㎏ �옄猷� : " + list1.get(1));
		
		// �뜲�씠�꽣 �겮�썙 �꽔湲곕룄 媛숇떎. 
		list1.add(0, "zzz");
		System.out.println("list1 => " + list1);
		
		// �뜲�씠�꽣 蹂�寃쏀븯湲� (set硫붿꽌�뱶)
		String temp = (String) list1.set(0, "YYY");
		System.out.println("temp => " + temp);
		System.out.println("list1 => " + list1);
		
		// �궘�젣�븯湲곕룄 媛숇떎.
		list1.remove(0);
		System.out.println("�궘�젣�썑 : " + list1);
		
		list1.remove("bbb");
		System.out.println("bbb �궘�젣�썑 : " + list1);
		System.out.println("===========================");
		
		// �젣�꽕由��쓣 吏��젙�븯�뿬 �꽑�뼵�븷 �닔 �엳�떎.
		ArrayList<String> list2 = new ArrayList<String>();
		list2.add("AAA");
		list2.add("BBB");
		list2.add("CCC");
		list2.add("DDD");
		list2.add("EEE");
		
		for(int i=0; i<list2.size(); i++){
			System.out.println(i + " : " + list2.get(i));
		}
		System.out.println("---------------------------");
		
		for(String s : list2){
			System.out.println(s);
		}
		System.out.println("---------------------------");
		
		// contains(鍮꾧탳媛앹껜); ==> 由ъ뒪�듃�뿉 '鍮꾧탳媛앹껜'媛� �엳�쑝硫� true
		//						  洹몃젃吏� �븡�쑝硫� false
		System.out.println(list2.contains("DDD"));  // true
		System.out.println(list2.contains("ZZZ"));  // false
		
		// indexOf(鍮꾧탳媛앹껜); ==> 由ъ뒪�듃�뿉�꽌 '鍮꾧탳媛앹껜'瑜� 李얠븘 '鍮꾧탳媛앹껜'媛�
		//			�엳�뒗 index媛믪쓣 諛섑솚�븳�떎.
		//			由ъ뒪�듃�뿉 '鍮꾧탳媛앹껜'媛� �뾾�쑝硫� -1�쓣 諛섑솚�븳�떎.
		System.out.println("DDD�쓽 index媛� : " + list2.indexOf("DDD"));
		System.out.println("ZZZ�쓽 index媛� : " + list2.indexOf("ZZZ"));
		System.out.println("---------------------------");
		
		// toArray() ==> 由ъ뒪�듃 �븞�쓽 �뜲�씠�꽣�뱾�쓣 諛곗뿴濡� 蹂��솚�븯�뿬 諛섑솚�븳�떎.
		//			 ==> 湲곕낯�쟻�쑝濡� Object�삎 諛곗뿴濡� 蹂��솚�븳�떎.
		
		Object[] strArr = list2.toArray();
		System.out.println("諛곗뿴�쓽 媛쒖닔 : " + strArr.length);
		
		// toArray()�뿉�꽌 罹먯뒪�똿�� �릺吏� �븡�뒗�떎.
		//String[] strArr2 = (String[]) list2.toArray();
		
		// 由ъ뒪�듃�쓽 �젣�꽕由� ���엯�뿉 留욌뒗 �옄猷뚰삎�쓽 諛곗뿴濡� 蹂��솚�븯�뒗 諛⑸쾿
		// �젣�꽕由����엯�쓽 0媛쒖쭨由� 諛곗뿴�쓣 �깮�꽦�빐�꽌 留ㅺ컻蹂��닔濡� �꽔�뼱以��떎.
		// �삎�떇) toArray(new �젣�꽕由����엯[0])
		String[] strArr2 = list2.toArray(new String[0]);
		System.out.println("strArr2�쓽 媛쒖닔 : " + strArr2.length);
		/*
		for(String ss : strArr2){
			System.out.println(ss);
		}
		*/
		for(int i=0; i<strArr2.length; i++){
			System.out.println(strArr2[i]);
		}
		
		System.out.println(list2.size());
		for(int i=0; i< list2.size(); i++) {
			list2.remove(i);
		}
		System.out.println(list2.size());
		
		//ArrayList �닚李⑥쟻�쑝濡� 吏��슱�븣�뒗 �뮘遺��꽣 吏��슫�떎.
	}

}
















