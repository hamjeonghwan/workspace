package kr.or.ddit.basic;

import java.util.HashSet;
import java.util.Iterator;
import java.util.Scanner;
import java.util.Set;


public class SetTestLotto {
      int[] num=new int[6];
   static   Scanner scan = new Scanner(System.in);	
	

  
  //1~45사이 로또/////////////////////////////////////////
  public void getRndNum(){
		
		Set<Integer> bbNumSet = new HashSet<Integer>();
		
	
		while(bbNumSet.size()<6){
			bbNumSet.add( (int)(Math.random() * 45 + 1) );
		}
		
			Iterator<Integer> it = bbNumSet.iterator();
				int i = 0; 
				while(it.hasNext()){
					num[i++] = it.next().intValue();
				}
				for(int j=1; j<=100; j++){  // 작업 회수
					int rnd = (int)(Math.random() * num.length);  // 0 ~ 2 사이의 난수
					int temp = num[0];
					num[0] = num[rnd];
					num[rnd] = temp;
				}
		System.out.println(bbNumSet);
  }
public void lottoStart() {

	  System.out.println("로또 구입 시작");
	  System.out.println("금액 입력");
	  int money=scan.nextInt();
	  
	  if(money>=1000) {
		  
	   	int buyLotto=money%1000;
	   	System.out.println("받은 금액은"+money);
	   	System.out.println("거스름돈"+buyLotto);
	      for(int i=0; i<money/1000; i++)
	      {
	   	getRndNum();
	      }
	  }
	  
	  else {
		  System.out.println("돈이 부족합니다");
		  
	  }

}
	public static void main(String[] args) {
		
		boolean isContinue=true;
		SetTestLotto lotto=new SetTestLotto(); 
		while(isContinue) {
			System.out.println("1:Lotto구입");
			System.out.println("2:프로그램 종료");
			
			int menu=scan.nextInt();
			
			switch(menu) {
			case 1:
				lotto.lottoStart();
				break;
			case 2:
			  isContinue=false;
			break;
			  default:
			
			
			}
		}
	}
}
	
		
	

