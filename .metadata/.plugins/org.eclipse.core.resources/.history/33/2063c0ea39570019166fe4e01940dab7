package kr.or.ddit.basic;

import java.util.ArrayList;
import java.util.Scanner;

public class T03_ArrayListTest {
	// 문제  5명의 사람 이름을 입력하여 ArrayList에 저장하고 
	// 			이중에서 김 씨 성의 이름을 출력하시오 
	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		ArrayList<String> list = new ArrayList<String>();
			for(int i = 0; i < 5; i++) {
				String str = s.nextLine();
				list.add(str);
				
			}
			System.out.println(list.contains("김"));

			[출처] 자바(java) 리스트 ( List,ArrayList ) 사용방법 |작성자 don2


			System.out.println( "김씨의 성을 가진 사람은? "+ list.indexOf("김"));
	}
}
