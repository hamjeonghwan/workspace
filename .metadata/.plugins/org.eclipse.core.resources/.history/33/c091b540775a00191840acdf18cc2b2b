			switch(phoneSelect){
			case 1: 
				PhoneSet();
				break;
				
			case 2: 
				PhoneSet();
				break;
					
			case 3: 
				PhoneSet();
				break;
					
			case 4: 
				PhoneSet();
				break;
				
			case 5: 
				PhoneSet();
				break;
				
			case 0:
				System.out.println("감사합니다.");
				isContinue = false;
				break;
			}
		}
	}

	private static void PhoneSet() {
		Map<String, String> Phonemap = new HashMap<>();
		
		System.out.println("새롭게 등록할 전화번호 정보를 입력하세요.");
		  이름 >> 홍길동  <-- 직접 입력
		  전화번호 >> 010-1234-5678  <-- 직접 입력
